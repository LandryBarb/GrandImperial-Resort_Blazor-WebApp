<button class=@Class data-type="@DataType" disabled="@isDisabled">
    @ChildContent
</button>

@code{
    [Parameter]
    public string? Class { get; set; }

     [Parameter]
    public bool? isDisabled { get; set; }

       [Parameter]
    public string? DataType { get; set; }
       [Parameter]
    public RenderFragment? ChildContent { get; set; }
}